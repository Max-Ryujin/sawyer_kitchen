<mujoco model="kitchen">


    <compiler angle="radian" inertiafromgeom='auto' inertiagrouprange='4 5'/>
    
    <!-- Particle assets for simple water simulation -->
    <asset>
        <!-- small blue particle material -->
        <material name="water_blue" rgba="0.2 0.45 0.95 1" shininess="0.6" specular="0.3"/>
        <!-- optional small sphere mesh for particle visualization (MuJoCo can render particles directly, but mesh helps if needed) -->
        <mesh name="particle_sphere" file="../kitchen/meshes/knob.stl" scale="0.005 0.005 0.005"/>
    </asset>
    <include file="../kitchen/assets/sawyer_assets/sawyer_dependencies.xml"/>
    <include file="../kitchen/assets/sawyer_assets/sawyer_joint_tor_act.xml"/>
    <include file="../kitchen/assets/sawyer_assets/gripper_pos_act.xml"/>
    <include file='../scenes/basic_scene.xml'/>
    <include file="../kitchen/assets/oven_asset.xml"/>
    <include file="../kitchen/assets/counters_asset.xml"/>
    <include file="../kitchen/assets/backwall_asset.xml"/>
    <include file="../kitchen/assets/slidecabinet_asset.xml"/>
    <include file="../kitchen/assets/hingecabinet_asset.xml"/>
    <include file="../kitchen/assets/microwave_asset.xml"/>
    <include file="../kitchen/assets/kettle_asset.xml"/>
    <include file="../kitchen/assets/cup_asset.xml"/>
    <worldbody>

            <!-- Sawyer Robot -->
        <body pos='0. -1.1 0.7' euler='0 0 1.57'>
            <geom type='cylinder' size='.120 .90' pos='-.04 0 -0.90'/>
            <include file="assets/sawyer_assets/sawyer_chain.xml"/>
        </body>

        <body name="kitchen" pos="0 0 0">
            <body name="counters1" pos="0 0 0">
                <include file="../kitchen/assets/counters_chain.xml"/>
            </body>
            <body name="oven" pos="0 0 0">
                <include file="../kitchen/assets/oven_chain.xml"/>
            </body>
            <body name="backwall" pos="0 0 0">
                <include file="../kitchen/assets/backwall_chain.xml"/>
            </body>
            <body name="slidecabinet" pos="0.4 0.3 2.6" >
                <include file="../kitchen/assets/slidecabinet_chain.xml"/>
            </body>
            <body name="hingecabinet" pos="-0.504 0.28 2.6" >
                <include file="../kitchen/assets/hingecabinet_chain.xml"/>
            </body>
            <body name="microwave" pos="-0.750 -0.025 1.6" euler="0 0 0.3">
                <include file="../kitchen/assets/microwave_chain.xml"/>
            </body>
        </body>
        <body name="kettle" pos="-0.169 0 1.626">
            <freejoint name="kettle_freejoint"/>
            <include file="../kitchen/assets/kettle_chain.xml"/>
        </body>
        <replicate count="8" offset="0 0.1 0" euler="90 0 0" pos="2.550 1.745 1.696">
            <replicate count="8" sep="-" offset="0.1 0 0" euler="0 90 0">
                <geom name="WaterBall" size=".02" type="sphere" rgba="0 0 1 0.5"/>
            </replicate>
        </replicate>
        <body name="cup" pos="2.550 1.745 1.626">
            <freejoint name="cup_freejoint"/>
            <include file="../kitchen/assets/cup_chain.xml"/>
        </body>
    </worldbody>

</mujoco>
